<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <!-- Persistence Unit for Lucy Datasource -->
    <persistence-unit name="lucyPU" transaction-type="JTA">
        <jta-data-source>java:/lucy</jta-data-source>
       
    </persistence-unit>
<persistence-unit name="lucy_persistence_unit" transaction-type="JTA">
    <!-- Persistence Unit for Equations Library Datasource -->
        <jta-data-source>java:/app/lucy/equations_library</jta-data-source>
       
    </persistence-unit>
</persistence>

